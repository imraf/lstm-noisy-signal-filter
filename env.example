# Environment Configuration for LSTM Frequency Filter
# Copy this file to .env and adjust values as needed: cp env.example .env

# ======================
# Device Configuration
# ======================
# Device to use for training (auto, cpu, cuda, mps)
# 'auto' will automatically select the best available device
DEVICE=auto

# ======================
# Logging Configuration
# ======================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty for console-only logging)
LOG_FILE=

# ======================
# Output Configuration
# ======================
# Base directory for outputs (models, datasets, visualizations)
OUTPUT_DIR=outputs

# Directory for saved model checkpoints
MODEL_DIR=outputs/models

# Directory for generated datasets
DATASET_DIR=outputs/datasets

# Directory for visualizations
VISUALIZATION_DIR=outputs/visualizations

# ======================
# Training Configuration
# ======================
# Random seed for reproducibility
RANDOM_SEED=42

# Number of epochs (can override config file)
# EPOCHS=100

# Batch size (can override config file)
# BATCH_SIZE=32

# Learning rate (can override config file)
# LEARNING_RATE=0.001

# ======================
# Data Configuration
# ======================
# Number of training samples
# TRAIN_SAMPLES=10000

# Number of test samples
# TEST_SAMPLES=3000

# ======================
# Visualization Configuration
# ======================
# DPI for saved plots
PLOT_DPI=300

# Plot format (png, pdf, svg)
PLOT_FORMAT=png

# ======================
# Testing Configuration
# ======================
# Enable verbose test output
TEST_VERBOSE=false

# Generate coverage reports
TEST_COVERAGE=true

# ======================
# Performance Configuration
# ======================
# Number of DataLoader workers (0 for main process only)
NUM_WORKERS=0

# Enable mixed precision training (true/false)
# Requires CUDA device
MIXED_PRECISION=false

# ======================
# Experiment Tracking
# ======================
# Experiment name (for organizing results)
EXPERIMENT_NAME=default

# Enable experiment tracking
TRACK_EXPERIMENTS=true

